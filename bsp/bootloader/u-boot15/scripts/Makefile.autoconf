RF_ADAPTIVE_BOARD_LIST := "ums312_1h10" "ums312_2h10" "ums312_2h10_go" "ums312_1h10_32b" "ums312_2h10_32b" "udx710_3h10" "ums512_1h10" "ums512_1h10_go" "ums512_2h10" \
"sp9863a_3c10" "sl8521e_2h10" "ums9230_1h10" "ums9230_1h10_go" "ums9230_4h10" "ums9230_4h10_go" "ums9230_3h10" "ums9230_14c10"  "ums9230_3h10_go" "ums9620_1h10" "ums9620_2h10" "ums9620_2c11" "ums9620_2h10_car" "ums9620_3c10" "ums9620_2c10"

NEED_RF_ADAPTIVE := $(filter $(CONFIG_SYS_CONFIG_NAME), $(RF_ADAPTIVE_BOARD_LIST))
