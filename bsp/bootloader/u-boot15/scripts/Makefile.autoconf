"sp7731e_1h10" "sp9850ka_2c20" "sp9850ka_1h10" "sp9863a_3h10" "sp9853i_1h10" "sp9832e_1h10_32b" \
"sp9820e_2h10" "sp9863a_tsg" "sp9832e_1h10" "sl8541e_1h10" "sl8521e_2h10" "ums9620_1h10" "ums9620_2h10" "ums9620_2c11" "ums9620_2h10_car" "ums9620_3c10" "ums9620_2c10"

